<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_other_accounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/other_accounts"
            android:layout_toStartOf="@+id/image_view_continue"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_toLeftOf="@+id/image_view_continue" />


        <ImageView
            android:id="@+id/image_view_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_view_description"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ic_arrow_go_to_black"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_view_other_accounts"
            android:text="@string/transfer_to_account_number"
            android:textColor="@color/black"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>